@model JobApplication
@{
    ViewData["Title"] = "Delete Job Application";
}
<h2 class="mb-3">Delete Job Application</h2>

<div class="alert alert-warning">
    Are you sure you want to delete the job application for <strong>@Model.CompanyName as @Model.JobTitle</strong> ?
</div>

<dl class="row">
    <dt class="col-sm-3">@Html.DisplayNameFor(x => x.CompanyName)</dt>
    <dd class="col-sm-9">@Model.CompanyName</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(x => x.JobTitle)</dt>
    <dd class="col-sm-9">@Model.JobTitle</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(x => x.ApplicationDate)</dt>
    <dd class="col-sm-9">@Model.ApplicationDate.ToShortDateString()</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(x => x.Status)</dt>
    <dd class="col-sm-9">@Model.Status.ToString()</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(x => x.Notes)</dt>
    <dd class="col-sm-9">@Model.Notes</dd>
</dl>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>