@model IEnumerable<JobApplication>
@{
    ViewData["Title"] = "Job Applications";
}

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        You have not added any job applications yet. Click the button below to add your first application.
    </div>
    <button asp-controller="JobApplications" asp-action="Create" class="btn btn-primary">Add job application</button>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Company</th>
                <th>Job Title</th>
                <th>Date Applied</th>
                <th>Status</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var application in Model)
            {
                <tr>
                    <td>@application.CompanyName</td>
                    <td>@application.JobTitle</td>
                    <td>@application.ApplicationDate.ToShortDateString()</td>
                    <td>@application.Status.ToString()</td>
                    <td>@application.Notes</td>
                </tr>
            }
        </tbody>
    </table>
}