@model IEnumerable<JobApplication>


@{
    ViewData["Title"] = "Job Applications";
    var q = (string?)ViewBag.Q ?? "";
    ApplicationStatus? selectedStatus = ViewBag.Status as ApplicationStatus?;
}

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-success">
        Add job application
    </a>
    <a asp-action="ExportCsv" 
        asp-route-q="@(string.IsNullOrWhiteSpace(q) ? null : q)"
        asp-route-status="@(selectedStatus.HasValue ? ((int)selectedStatus.Value).ToString() : null)"
        class="btn btn-outline-secondary ms-2">
        Export to CSV
    </a>
</div>

<form asp-action="Index" method="get" class="row g-2 align-items-end mb-3">
    <div class="col-md-5">
        <label class="form-label" for="q">Search</label>
        <input id="q" name="q" value="@q" class="form-control" placeholder="Company or job title..." />
    </div>

    <div class="col-md-4">
        <label class="form-label" for="status">Status</label>
        <select id="status" name="status" class="form-select">
            <option value="">All</option>
            @foreach (var item in Html.GetEnumSelectList<ApplicationStatus>())
            {
                var isSelected = selectedStatus.HasValue && item.Value == ((int)selectedStatus.Value).ToString();
                <option value="@item.Value" selected="@(isSelected ? "selected" : null)">@item.Text</option>
            }
        </select>
    </div>

    <div class="col-md-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Filter</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
    </div>
</form>

@{
    var hasFilter = !string.IsNullOrWhiteSpace(q) || selectedStatus.HasValue;
}

@if (!Model.Any())
{
    if (hasFilter)
    {
        <div class="alert alert-warning" role="alert">
            No results match your filters.
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            You have not added any job applications yet. Click the button below to add your first application.
        </div>
    }
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Company</th>
                <th>Job Title</th>
                <th>Date Applied</th>
                <th>Status</th>
                <th>Notes</th>
                <th>Aktionen</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var application in Model)
            {
                <tr>
                    <td>@application.CompanyName</td>
                    <td>@application.JobTitle</td>
                    <td>@application.ApplicationDate.ToShortDateString()</td>
                    <td>
                        <partial name="_StatusBadge" model="application.Status" />
                     </td>
                    <td>@application.Notes</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@application.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                        <a asp-action="Edit" asp-route-id="@application.Id" class="btn btn-sm btn-outline-primary ms-2">Edit</a>

                        <button type="button"
                                class="btn btn-sm btn-outline-danger ms-2"
                                data-bs-toggle="modal"
                                data-bs-target="#deleteModal-@application.Id">
                            Delete
                        </button>

                        <div class="modal fade" id="deleteModal-@application.Id" tabindex="-1"
                             aria-labelledby="deleteModalLabel-@application.Id" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteModalLabel-@application.Id">Confirm delete</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete:
                                        <strong>@application.CompanyName</strong> — <strong>@application.JobTitle</strong>?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <form asp-action="Delete" asp-route-id="@application.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}