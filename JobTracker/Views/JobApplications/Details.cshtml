@model JobApplication
@{
    ViewData["Title"] = "Job Application Details";
}

<h2>Job Application Details</h2>

<dl class="row">
    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CompanyName)</dt>
    <dd class="col-sm-9">@Model.CompanyName</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.JobTitle)</dt>
    <dd class="col-sm-9">@Model.JobTitle</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.ApplicationDate)</dt>
    <dd class="col-sm-9">@Model.ApplicationDate.ToShortDateString()</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Status)</dt>
    <dd class="col-sm-9">
        <partial name="_StatusBadge" model="Model.Status" />
    </dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Notes)</dt>
    <dd class="col-sm-9">@Model.Notes</dd>
</dl>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to list</a>
</div>